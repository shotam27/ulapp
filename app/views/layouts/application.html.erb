<!DOCTYPE html>
<html>
  <head>
    <title>Schare</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://kit.fontawesome.com/508fa62f00.js" crossorigin="anonymous"></script>
  </head>

  <body id="<%= request.path_info %>">
  
    <nav id="header-nav">
    
      <a href="../events/timeline" class="title">
      <%= image_tag asset_path("logo.jpg", alt: "", width="154", height="53") %>
      </a>

      <ul class="header-list">
      
        <li class="menu-item a">
          <a><i class="fas fa-info-circle"></i></a>
          <ul class="sub-menu">
            <li class="sub-menu-item a">
              <%= link_to "サイトについて","../home/index" %>
            </li>
          </ul><!-- /.sub-menu -->
        </li><!-- /.menu-item a -->

        <li class="menu-item c">
          <a><i class="fas fa-people-arrows"></i></a>
          <ul class="sub-menu">
            <li class="sub-menu-item c">
              <%= link_to "みんなの予定","../events/timeline" %>
            </li>
            <li class="sub-menu-item c">
              <%= link_to "ユーザー検索","../events/search" %>
            </li>          </ul><!-- /.sub-menu -->
        </li><!-- /.menu-item c-->
        
        <li class="menu-item d">
          <a><i class="fas fa-male"></i></a>
          <ul class="sub-menu">
            <li class="sub-menu-item d">
              <%= link_to "あなたの予定","../events" %>
            </li>
            <li class="sub-menu-item d">
              <%= link_to "予定作成",new_event_path %>
            </li>
            <li class="sub-menu-item d">
              <%= link_to "設定の変更",edit_user_registration_path %>
            </li>
            <li class="sub-menu-item d">
              <%= link_to "サインアウト",destroy_user_session_path, method: :delete %>
            </li>
          </ul><!-- /.sub-menu -->
        </li><!-- /.menu-item d -->
      
      </ul><!-- /.header-nav-list -->
    </nav><!-- /#header-nav -->

    <div id='content'>
      <%= yield %>
    </div>

  </body>
</html>
