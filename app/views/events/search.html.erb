<h1>ユーザーの検索</h1>

<p>こんにちは、<%= current_user.nickname %>さん！</p>

<%= form_tag '../events/search', :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search], class: "search_container" %>
    <%= submit_tag "Search", :nickname => nil, class: "btn" %>
  </p>
<% end %>

<h3>検索結果</h3>
<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user|%>
    <tr>
      <td><%= link_to user.nickname, [user] %></td>
      <td><%= user.email%></td>
      <td><%= render "relationships/follow_button", user: user %></td>
    </tr>
    <% end %>
  </tbody>
</table>

