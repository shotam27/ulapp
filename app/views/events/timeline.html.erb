<p id="notice"><%= notice %></p>

<h1>User List</h1>

<% User.all.each do |user|%>
  <div>
    <%= link_to user.nickname, [user] %>
  </div>
<% end %>

<h1>みんなの予定</h1>
<table>
  <thead>
    <tr>
      <th>作成者</th>
      <th>予定</th>
      <th>日にち</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.user.nickname %></td>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <% if current_user == event.user %>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '削除', event, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
        <% end%>
      </tr>
    <% end %>
  </tbody>
</table>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
  <div>
    <%= event.user.nickname %>
    |
    <% if current_user == event.user%>
    <%= link_to event.name, edit_event_path(event)%>
    <% else %>
    <%= event.name %>
    <% end %>

  </div>
  <% end %>
<% end %>

<br>

