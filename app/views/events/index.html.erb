<p id="notice"><%= notice %></p>

<p>こんにちは、<%= current_user.nickname %>さん！</p>

<h1>User List</h1>

<% User.all.each do |user|%>
  <div>
    <%= link_to user.nickname, [user] %>
  </div>
<% end %>

<h1>あなたの予定</h1>
<%= @msg%>
<table>
  <thead>
    <tr>
      <th>予定</th>
      <th>日にち</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.start_time %></td>
        <td><%= link_to '編集', edit_event_path(event) %></td>
        <td><%= link_to '削除', event, method: :delete, data: { confirm: '本当に削除しますか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= month_calendar events: @events do |date, events| %>
  <%= date.day %>

  <% events.each do |event| %>
  <div>
    <%= event.name %>
  </div>
  <% end %>
<% end %>

<br>

